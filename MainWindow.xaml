<Window
    x:Class="Winvert4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winvert4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Resources moved to Grid.Resources -->

    <Grid>
        <Grid.Resources>
            <!-- Template for a single Color Map row -->
            <DataTemplate x:Key="ColorMapRowTemplate">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="2" Padding="2">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Enable checkbox -->
                        <CheckBox x:Name="RowEnableCheckBox"
                                  Grid.Column="0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Padding="0"
                                  MinWidth="0"/>

                        <!-- Source swatch -->
                        <Button x:Name="RowSrcButton"
                                Grid.Column="1"
                                Width="36" Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="0"
                                BorderThickness="1"/>

                        <!-- Arrow icon -->
                        <Image Grid.Column="2"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               >
                            <Image.Source>
                                <SvgImageSource UriSource="ms-appx:///Assets/arrow_right.svg"/>
                            </Image.Source>
                        </Image>

                        <!-- Destination swatch -->
                        <Button x:Name="RowDstButton"
                                Grid.Column="3"
                                Width="36" Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="0"
                                BorderThickness="1"/>

                        <!-- Tolerance slider -->
                        <Slider x:Name="RowToleranceSlider"
                                Grid.Column="4"
                                Minimum="0" Maximum="255" StepFrequency="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"/>

                        <!-- Remove button -->
                        <Button x:Name="RowRemoveButton"
                                Grid.Column="5"
                                Content="Remove"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </Grid.Resources>
        <!-- Main Control Panel with Tabs -->
        <StackPanel x:Name="RootPanel" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Spacing="5" Padding="10">
            <TabView x:Name="RegionsTabView"
                     IsAddTabButtonVisible="True"
                     TabWidthMode="SizeToContent"
                     AddTabButtonClick="RegionsTabView_AddTabButtonClick"
                     TabCloseRequested="RegionsTabView_TabCloseRequested"
                     SelectionChanged="RegionsTabView_SelectionChanged">
                <TabView.TabStripFooter>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" RequestedTheme="Light" MinWidth="40" Margin="8,0,0,0">
                        <Button x:Name="SettingsButton" Click="SettingsButton_Click" Width="32" Height="32" MinWidth="32" MinHeight="32" Padding="0" ToolTipService.ToolTip="Open Settings">
                            <Image Source="Assets/settings.svg" Width="20" Height="20" IsHitTestVisible="False"/>
                        </Button>
                    </StackPanel>
                </TabView.TabStripFooter>
            </TabView>

            <InfoBar x:Name="InfoBar"
                     IsOpen="False"
                     Severity="Informational"
                     Title="No Active Regions"
                     Message="Use a hotkey or the + button to create a region."
                     Closed="InfoBar_Closed"/>

            <Grid ColumnSpacing="5" RequestedTheme="Light" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="InvertEffectButton" Grid.Column="0" Click="InvertEffect_Click" Width="36" Height="36" Padding="0" ToolTipService.ToolTip="Toggle Invert">
                    <Image x:Name="InvertEffectImage" Width="26" Height="26" IsHitTestVisible="False"/>
                </Button>
                <Button x:Name="BrightnessProtectionButton" Grid.Column="1" Click="BrightnessProtection_Click" Width="36" Height="36" Padding="0" ToolTipService.ToolTip="Brightness Protection">
                    <Image x:Name="BrightnessProtectionImage" Width="26" Height="26" IsHitTestVisible="False"/>
                </Button>
                <Button x:Name="FiltersDropDownButton" Grid.Column="2" Width="36" Height="36" Padding="0" ToolTipService.ToolTip="Select Custom Filter">
                    <Image Source="Assets/filter.svg" Width="26" Height="26" IsHitTestVisible="False"/>
                    <Button.Flyout>
                        <MenuFlyout x:Name="FiltersMenuFlyout"/>
                    </Button.Flyout>
                </Button>
                <Button x:Name="HideAllWindowsButton" Grid.Column="3" Click="HideAllWindows_Click" Width="36" Height="36" Padding="0" ToolTipService.ToolTip="Hide/Show Region">
                    <Image x:Name="HideAllWindowsImage" Width="26" Height="26" IsHitTestVisible="False"/>
                </Button>
                <!-- Mapping toggle button -->
                <Button x:Name="ColorMappingToggleButton" Grid.Column="4" Click="ColorMappingToggle_Click" Width="36" Height="36" Padding="0" ToolTipService.ToolTip="Toggle Color Mapping">
                    <Image x:Name="ColorMappingToggleImage" Width="26" Height="26" IsHitTestVisible="False"/>
                </Button>
            </Grid>

        </StackPanel>

        <!-- Settings Panel (Initially Hidden) -->
        <Grid x:Name="SettingsPanel" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sticky Header -->
            <Grid Grid.Row="0" Padding="15,10,15,10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton" Grid.Column="0" Content="Back" Click="BackButton_Click" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBlock Grid.Column="1" Text="Settings" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>

            <!-- Two-column settings content -->
            <Grid x:Name="SettingsContentGrid" Grid.Row="1" ColumnSpacing="24" SizeChanged="SettingsPanel_SizeChanged">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="MainColumn" Width="*"/>
                    <ColumnDefinition x:Name="AboutColumn" Width="0"/>
                </Grid.ColumnDefinitions>

                <!-- Left column: cards -->
                <ScrollViewer Grid.Column="0">
                    <StackPanel Spacing="12" Padding="15">

                        <!-- Appearance / Border Color Card -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <Expander x:Name="SelectionColorExpander" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" CornerRadius="2">
                                <Expander.Header>
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Custom border color" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <ToggleSwitch x:Name="SelectionColorEnableToggle" Grid.Column="1" OnContent="On" OffContent="Off" Toggled="SelectionColorEnable_Toggled"/>
                                    </Grid>
                                </Expander.Header>
                                <StackPanel Spacing="8" Padding="8,4,0,8" HorizontalAlignment="Left">
                                    <ColorPicker x:Name="SelectionColorPicker" ColorSpectrumShape="Ring" IsAlphaEnabled="False" ColorChanged="SelectionColorPicker_ColorChanged"/>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <!-- Brightness Protection Card -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <Expander x:Name="BrightnessExpander" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" CornerRadius="2">
                                <Expander.Header>
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Brightness protection" FontWeight="SemiBold"/>
                                            <TextBlock Text="Automatically choose the darker result" Opacity="0.7"/>
                                        </StackPanel>
                                        <!-- No On/Off toggle per request -->
                                    </Grid>
                                </Expander.Header>
                                <StackPanel Spacing="8" Padding="8,4,0,8" HorizontalAlignment="Left">
                                    <TextBlock Text="Trigger delay (frames)" Margin="0,0,0,4"/>
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <NumberBox Grid.Column="0" x:Name="BrightnessDelayNumberBox" Minimum="0" Maximum="1000" SmallChange="1" LargeChange="5" SpinButtonPlacementMode="Compact" ValueChanged="BrightnessDelay_ValueChanged"/>
                                        <Button Grid.Column="1" x:Name="BrightnessResetButton" Content="Reset defaults" Click="BrightnessResetButton_Click"/>
                                    </Grid>
                                    <TextBlock Text="Luminance Weights" Margin="0,12,0,0"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <NumberBox x:Name="LumaRNumberBox" Header="R" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" SpinButtonPlacementMode="Compact" ValueChanged="LumaWeight_ValueChanged"/>
                                        <NumberBox x:Name="LumaGNumberBox" Header="G" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" SpinButtonPlacementMode="Compact" ValueChanged="LumaWeight_ValueChanged"/>
                                        <NumberBox x:Name="LumaBNumberBox" Header="B" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" SpinButtonPlacementMode="Compact" ValueChanged="LumaWeight_ValueChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <!-- Update Rate Card -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <!-- Match Expander: semi-transparent inner fill -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="2" Padding="2">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Show FPS overlay" FontWeight="SemiBold" VerticalAlignment="Center" Margin="16,0,0,0"/>
                                    <ToggleSwitch Grid.Column="1" x:Name="ShowFpsToggle" OnContent="On" OffContent="Off" IsOn="True" Toggled="ShowFpsToggle_Toggled"/>
                                </Grid>
                            </Border>
                            <!--<Expander x:Name="UpdateRateExpander" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <Expander.Header>
                                    <TextBlock Text="Update rate" FontWeight="SemiBold"/>
                                </Expander.Header>
                                <StackPanel Spacing="8" Padding="8,4,0,8">
                                    <ToggleSwitch x:Name="ShowFpsToggle" Header="Show FPS overlay" IsOn="True" Toggled="ShowFpsToggle_Toggled"/>
                                </StackPanel>
                            </Expander>-->
                        </Border>

                        <!-- Hotkeys Card -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <Expander x:Name="HotkeysExpander" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" CornerRadius="2">
                                <Expander.Header>
                                    <TextBlock Text="Hotkeys" FontWeight="SemiBold"/>
                                </Expander.Header>
                                <StackPanel Spacing="8" Padding="8,4,0,8">
                                    <ToggleSwitch x:Name="RunAtStartupToggle" Header="Run at startup" Toggled="RunAtStartupToggle_Toggled"/>
                                    <Grid ColumnSpacing="10" RowSpacing="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="InvertHotkeyTextBox" Grid.Row="0" Grid.Column="0" IsReadOnly="True" />
                                        <Button x:Name="RebindInvertHotkeyButton" Grid.Row="0" Grid.Column="1" Content="Rebind Invert/Add" Click="RebindInvertHotkeyButton_Click"/>
                                        <TextBox x:Name="FilterHotkeyTextBox" Grid.Row="1" Grid.Column="0" IsReadOnly="True" />
                                        <Button x:Name="RebindFilterHotkeyButton" Grid.Row="1" Grid.Column="1" Content="Rebind Filter/Add" Click="RebindFilterHotkeyButton_Click"/>
                                        <TextBox x:Name="RemoveHotkeyTextBox" Grid.Row="2" Grid.Column="0" IsReadOnly="True" />
                                        <Button x:Name="RebindRemoveHotkeyButton" Grid.Row="2" Grid.Column="1" Content="Rebind Remove Last" Click="RebindRemoveHotkeyButton_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="RebindStatusText"/>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <!-- Custom Filters editor as Expander -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="12">
                            <Expander x:Name="CustomFiltersExpander"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      Collapsed="CustomFiltersExpander_Collapsed"
                                      Expanding="CustomFiltersExpander_Expanding"
                                      CornerRadius="2">
                                <Expander.Header>
                                    <TextBlock Text="Custom filters" FontWeight="SemiBold"/>
                                </Expander.Header>
                                <StackPanel Spacing="8">
                                    <!-- Favorite effect selection for Win+Shift+F -->
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Favorite effect (Win+Shift+F)"/>
                                        <ComboBox x:Name="FavoriteFilterComboBox" SelectionChanged="FavoriteFilterComboBox_SelectionChanged"/>
                                    </StackPanel>

                                    <Grid ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox x:Name="SavedFiltersComboBox" Grid.Column="0" HorizontalAlignment="Stretch" SelectionChanged="SavedFiltersComboBox_SelectionChanged" IsEditable="True" PlaceholderText="Filter name" KeyDown="EnterKeyCommit_Unfocus" KeyUp="EnterKeyCommit_Unfocus"/>
                                    </Grid>
                                    <!-- Editor panel -->
                                    <StackPanel x:Name="FilterEditorPanel" Spacing="5" Visibility="Visible">
                                        <!-- Advanced matrix moved to SimpleFilterPanel to share space with sliders -->
                                        <!-- Simple Mode Controls -->
                                        <StackPanel x:Name="SimpleFilterPanel" Spacing="8" Margin="0,10,0,0">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                <TextBlock Text="Advanced Matrix"/>
                                                <ToggleSwitch x:Name="AdvancedMatrixToggle" Toggled="AdvancedMatrixToggle_Toggled"/>
                                                <Button x:Name="SimpleResetButton" Content="Reset" Click="SimpleResetButton_Click"/>
                                            </StackPanel>
                                            <StackPanel x:Name="SimpleSlidersPanel" Spacing="4">
                                                <TextBlock Text="Brightness"/>
                                                <Slider x:Name="BrightnessSlider" Minimum="-1" Maximum="1" StepFrequency="0.01" ValueChanged="BrightnessSlider_ValueChanged"/>
                                                <TextBlock Text="Contrast"/>
                                                <Slider x:Name="ContrastSlider" Minimum="0" Maximum="2" StepFrequency="0.01" ValueChanged="ContrastSlider_ValueChanged"/>
                                                <TextBlock Text="Saturation"/>
                                                <Slider x:Name="SaturationSlider" Minimum="0" Maximum="2" StepFrequency="0.01" ValueChanged="SaturationSlider_ValueChanged"/>
                                                <TextBlock Text="Hue (degrees)"/>
                                                <Slider x:Name="HueSlider" Minimum="-180" Maximum="180" StepFrequency="1" ValueChanged="HueSlider_ValueChanged"/>
                                                <TextBlock Text="Temperature"/>
                                                <Slider x:Name="TemperatureSlider" Minimum="-1" Maximum="1" StepFrequency="0.01" ValueChanged="TemperatureSlider_ValueChanged"/>
                                                <TextBlock Text="Tint"/>
                                                <Slider x:Name="TintSlider" Minimum="-1" Maximum="1" StepFrequency="0.01" ValueChanged="TintSlider_ValueChanged"/>
                                            </StackPanel>
                                            <!-- Advanced matrix panel: shown when Advanced toggle is on -->
                                            <StackPanel x:Name="AdvancedMatrixPanel" Spacing="0" Visibility="Collapsed">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Spacing="5" Margin="0,0,5,0">
                                                        <TextBlock Text="Red" Height="32" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Green" Height="32" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Blue" Height="32" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Alpha" Height="32" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Offset" Height="32" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <Grid x:Name="FilterMatrixGrid" Grid.Column="1" ColumnSpacing="5" RowSpacing="5">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="60"/>
                                                        </Grid.ColumnDefinitions>
                                                    </Grid>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
                                            <Button x:Name="SaveFilterButton" Content="Save" Click="SaveFilterButton_Click"/>
                                            <ToggleButton x:Name="PreviewFilterToggle" Content="Preview" Checked="PreviewFilterToggle_Checked" Unchecked="PreviewFilterToggle_Unchecked"/>
                                            <Button x:Name="DeleteFilterButton" Content="Delete" Click="DeleteFilterButton_Click" IsEnabled="False"/>
                                            <Button x:Name="ClearFilterButton" Content="Clear" Click="ClearFilterButton_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <!-- Color Mapping Card -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="12">
                            <Expander x:Name="ColorMappingExpander"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      CornerRadius="2">
                                <Expander.Header>
                                    <TextBlock Text="Color mapping" FontWeight="SemiBold"/>
                                </Expander.Header>
                                <Grid ColumnSpacing="16" Padding="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <!-- Make header row compact, table fills remaining space -->
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" FontSize="24" Text="Define color replacements" HorizontalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                        <Button x:Name="ColorMapAddButton" Content="Add" Click="ColorMapAddButton_Click"/>
                                        <Button x:Name="ColorMapSampleButton" Content="Sample" Click="ColorMapSampleButton_Click"/>
                                        <ToggleButton x:Name="PreviewColorMapToggle" Content="Preview" Checked="PreviewColorMapToggle_Checked" Unchecked="PreviewColorMapToggle_Unchecked"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Padding="0,32,0,0" Spacing="8">
                                        <TextBlock Grid.Column="1" Grid.Row="1" Text="Color picker" HorizontalAlignment="Center"/>
                                        <ColorPicker x:Name="ColorMapPicker" ColorSpectrumShape="Ring" IsAlphaEnabled="False" ColorChanged="ColorMapPicker_ColorChanged"/>
                                        <ToggleSwitch x:Name="ColorMapPreserveToggle" Header="Preserve brightness" IsOn="True" Toggled="ColorMapPreserveToggle_Toggled"/>
                                    </StackPanel>


                                    <!-- Header moved into the first row inside the scroll list for alignment -->

                                    <ScrollViewer Grid.Column="0" Grid.Row="1" x:Name="ColorMapListScroll" VerticalScrollBarVisibility="Auto" Height="Auto" MaxHeight="460">
                                        <StackPanel x:Name="ColorMapListContainer" Spacing="6" Padding="4">
                                            <!-- Header inside scroll area for alignment with rows -->
                                            <Grid x:Name="ColorMapHeaderGrid" ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" FontSize="18" Text="Enable" Opacity="0.7" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" FontSize="18" Text="From" Opacity="0.7" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" FontSize="18" Text="" Opacity="0.7" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" FontSize="18" Text="To" Opacity="0.7" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="4" FontSize="18" Text="Tolerance" Opacity="0.7"/>
                                                <TextBlock Grid.Column="5" FontSize="18" Text=""/>
                                            </Grid>
                                            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,4,0,0" Margin="0,6,0,6"/>

                                            <!-- Items list -->
                                            <ItemsControl x:Name="ColorMapList">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="6"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Expander>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right column: About -->
                <ScrollViewer x:Name="AboutScroll" Grid.Column="1" Visibility="Collapsed">
                    <StackPanel Spacing="12" Padding="0,15,15,15">
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="About this app" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock x:Name="AboutVersionText" Text="Winvert" FontWeight="SemiBold"/>
                                <!--<HyperlinkButton Content="License" NavigateUri="https://github.com/"/>
                                <HyperlinkButton Content="Privacy" NavigateUri="https://github.com/"/>
                                <Button Content="Send feedback"/>-->
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
